<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.DettaglioSessionePassata$PlaceholderFragment" >

 
    <ImageView
        android:id="@+id/thumbnailSessione"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/thumbnail_placeholder" />

    <TextView
        android:id="@+id/timestampsessione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/durataSessione"
        android:layout_below="@+id/durataSessione"
        android:text="@string/durata"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/durataSessione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thumbnailSessione"
        android:layout_below="@+id/thumbnailSessione"
        android:text="@string/timestamp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/titoloLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timestampsessione"
        android:gravity="center_horizontal"
        android:text="@string/cadute"
        android:textSize="40sp" />

</RelativeLayout>
