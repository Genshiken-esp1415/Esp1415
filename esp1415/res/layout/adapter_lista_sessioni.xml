<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp" 
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp" /> 

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/firstLine"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="70dip"
        android:layout_height="30dip"
        android:layout_above="@+id/secondLine"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/description"
        android:src="@drawable/thumbnail_sessione_placeholder" />

<!--- layout_marginStart per supportare meglio layout da destra a sinistra, marginLeft per supportare API piÃ¹ vecchie di 17, lo stesso dicasi per layout_alignParent e layout_margin-->
</RelativeLayout>