<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.DettaglioSessionePassata$PlaceholderFragment" >

 
    <ImageView
        android:id="@+id/session_thumbnail"
        android:contentDescription="@string/thumbnail_description"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box" />

    <TextView
        android:id="@+id/session_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/session_length"
        android:layout_alignStart="@+id/session_length"
        android:layout_below="@+id/session_thumbnail"
        android:text="@string/timestamp"
        android:textSize="40sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/session_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/session_thumbnail"
        android:layout_alignStart="@+id/session_thumbnail"
        android:layout_below="@+id/session_timestamp"
        android:text="@string/duration"
        android:textSize="40sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/session_length"
        android:gravity="center_horizontal"
        android:text="@string/falls"
        android:textSize="40sp"
        android:textColor="#000000" />

</RelativeLayout>
