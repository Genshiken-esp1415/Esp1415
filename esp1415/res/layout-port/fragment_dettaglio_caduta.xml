<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.DettaglioCaduta$PlaceholderFragment" >

    <ImageView
        android:id="@+id/thumbnail_label"
        android:contentDescription="@string/thumbnail_description"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/grafico_z"
        android:layout_alignEnd="@+id/grafico_z"
        android:layout_marginTop="35dp"
        android:background="@drawable/box"
        android:src="@drawable/thumbnail_placeholder" />

    <!-- <ImageView
        android:id="@+id/grafico_label"
        android:layout_width="480dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/box"
        android:src="@drawable/graph_placeholder" /> -->
      
    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/data_label"
        android:layout_alignBottom="@+id/data_label"
        android:layout_toRightOf="@+id/data_label"
        android:layout_toEndOf="@+id/data_label"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/latitudine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/latitudine_label"
        android:layout_alignBottom="@+id/latitudine_label"
        android:layout_alignLeft="@+id/longitudine"
        android:layout_alignStart="@+id/longitudine"
        android:text=""
        android:maxLength="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/longitudine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/longitudine_label"
        android:layout_alignBottom="@+id/longitudine_label"
        android:layout_toRightOf="@+id/longitudine_label"
        android:layout_toEndOf="@+id/longitudine_label"
        android:text=""
        android:maxLength="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ora_label"
        android:layout_alignStart="@+id/ora_label"
        android:layout_alignTop="@+id/thumbnail_label"
        android:text="@string/data"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/ora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ora_label"
        android:layout_alignBottom="@+id/ora_label"
        android:layout_alignLeft="@+id/data"
        android:layout_alignStart="@+id/data"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

	<TextView
	    android:id="@+id/notifica"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/notifica_label"
	    android:layout_alignBottom="@+id/notifica_label"
	    android:layout_toRightOf="@+id/notifica_label"
	    android:layout_toEndOf="@+id/notifica_label"
	    android:text=""
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />

	<it.unipd.dei.esp1415.GraphView
	    android:id="@+id/grafico_x"
	    android:layout_width="448dp"
	    android:layout_height="76dp"
	    android:layout_above="@+id/grafico_y"
	    android:layout_alignRight="@+id/grafico_y"
	    android:layout_alignEnd="@+id/grafico_y"
	    android:layout_alignLeft="@+id/grafico_y"
	    android:layout_alignStart="@+id/grafico_y" />

	<it.unipd.dei.esp1415.GraphView
	    android:id="@+id/grafico_z"
	    android:layout_width="448dp"
	    android:layout_height="76dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/box" />

	<it.unipd.dei.esp1415.GraphView
	    android:id="@+id/grafico_y"
	    android:layout_width="448dp"
	    android:layout_height="76dp"
	    android:layout_above="@+id/grafico_z"
	    android:layout_alignLeft="@+id/grafico_z" />

	<TextView
	    android:id="@+id/ora_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/latitudine_label"
	    android:layout_alignStart="@+id/latitudine_label"
	    android:layout_below="@+id/data"
	    android:layout_marginTop="30dp"
	    android:text="@string/ora"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />

	<TextView
	    android:id="@+id/longitudine_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/grafico_x"
	    android:layout_alignStart="@+id/grafico_x"
	    android:layout_below="@+id/latitudine_label"
	    android:text="@string/longitudine"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />

	<TextView
	    android:id="@+id/notifica_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/longitudine_label"
	    android:layout_alignStart="@+id/longitudine_label"
	    android:layout_below="@+id/longitudine"
	    android:layout_marginTop="33dp"
	    android:text="@string/notifica"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />

	<TextView
	    android:id="@+id/latitudine_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/longitudine_label"
	    android:layout_alignStart="@+id/longitudine_label"
	    android:layout_below="@+id/ora"
	    android:layout_marginTop="33dp"
	    android:layout_toLeftOf="@+id/latitudine"
	    android:text="@string/latitudine"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="40sp" />
	
</RelativeLayout>