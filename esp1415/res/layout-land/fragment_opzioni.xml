<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.OpzioniActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/campionamento_label"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/campionamento"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sveglia_label"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/campionamento_label"
        android:layout_alignBottom="@+id/campionamento_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/promemoria"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/durata_label"
        android:layout_alignBottom="@+id/durata_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/email"
        android:textSize="30sp" />

    <Button
        android:id="@+id/campionamento"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/campionamento_label"
        android:layout_alignStart="@+id/campionamento_label"
        android:layout_below="@+id/sveglia_label"
        android:text="@string/normale" />

    <CheckBox
        android:id="@+id/sveglia_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sveglia"
        android:layout_alignBottom="@+id/sveglia"
        android:layout_alignRight="@+id/sveglia_label"
        android:layout_alignEnd="@id/sveglia_label"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:onClick="onCheckboxClicked"
        android:text="@string/attiva_sveglia" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_label"
        android:layout_alignStart="@+id/email_label"
        android:layout_below="@+id/durata_label"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/durata_label"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/campionamento"
        android:layout_alignStart="@+id/campionamento"
        android:layout_below="@+id/campionamento"
        android:layout_marginTop="32dp"
        android:text="@string/durata_max"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sveglia"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/campionamento"
        android:layout_alignBottom="@+id/campionamento"
        android:layout_alignLeft="@+id/sveglia_label"
        android:layout_alignStart="@+id/sveglia_label"
        android:onClick="showTimePickerDialog"
        android:text="@string/default_sveglia" />

    <Button
        android:id="@+id/contatti_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contatti"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/sveglia"
        android:layout_toEndOf="@+id/sveglia"
        android:text="@string/contatti" />

    <Button
        android:id="@+id/minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/durata_label"
        android:layout_alignStart="@+id/durata_label"
        android:text="@string/sottrazione" />

    <TextView
        android:id="@+id/max_durata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minus"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/minus"
        android:layout_toEndOf="@+id/minus"
        android:text="@string/default_durata"
        android:textSize="40sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/max_durata"
        android:layout_toRightOf="@+id/max_durata"
        android:layout_toEndOf="@+id/max_durata"
        android:text="@string/addizione" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <ListView
        android:id="@+id/contatti"
        android:layout_width="700dp"
        android:layout_height="225dp"
        android:layout_above="@+id/salva_button"
        android:listSelector="@android:color/transparent"
        android:layout_alignLeft="@+id/contatti_label"
        android:layout_alignStart="@+id/contatti_label" >
    </ListView>

    <TextView
        android:id="@+id/contatti_label"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_above="@+id/contatti"
        android:layout_alignLeft="@+id/minus"
        android:layout_alignStart="@+id/minus"
        android:text="@string/lista_contatti"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:text="@string/gmail"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/notifica_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sveglia_checkbox"
        android:layout_alignStart="@+id/sveglia_checkbox"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_below="@+id/ore_label"
        android:onClick="onCheckboxClicked"
        android:text="@string/attiva_notifica" />

    <!-- <Button
        android:id="@+id/carica_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/salva_button"
        android:layout_alignBottom="@+id/salva_button"
        android:layout_toRightOf="@+id/salva_button"
        android:text="Carica" /> -->

    <TextView
        android:id="@+id/ore_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/max_durata"
        android:layout_alignBottom="@+id/max_durata"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/plus"
        android:layout_toRightOf="@+id/plus"
        android:text="@string/ore"
        android:textSize="30sp" />

    <Button
        android:id="@+id/salva_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/salva" />

</RelativeLayout>