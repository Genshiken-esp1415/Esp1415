<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.DettaglioSessionePassata$PlaceholderFragment" >

    <ImageView
        android:id="@+id/session_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/box"
        android:contentDescription="@string/thumbnail_description" />

    <TextView
        android:id="@+id/session_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/session_thumbnail"
        android:layout_toEndOf="@+id/session_thumbnail"
        android:layout_toRightOf="@+id/session_thumbnail"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/session_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/session_thumbnail"
        android:layout_toEndOf="@+id/session_timestamp"
        android:layout_toRightOf="@+id/session_timestamp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_timestamp"
        android:layout_alignBottom="@+id/session_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:text="@string/falls"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>